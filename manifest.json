{
    "manifest_version": 3,
    "name": "Twitch Chat for Lekker Spelen",
    "version": "1.0",
    "description": "Displays archived Twitch chats alongside Lekker Spelen's YouTube VODs.",
    "permissions": [
        "storage"
    ],
    "host_permissions": [
        "https://www.youtube.com/*"
    ],
    "background": {
        "scripts": ["background.js"]
    },
    "icons": {
        "48": "assets/lekkerChat.png"
    },    
    "action": {
        "default_title": "LekkerChat",
        "default_popup": "dist/index.html",
        "default_icon": "assets/lekkerChat.png"
    },
    "content_scripts": [
        {
            "matches": [
                "https://www.youtube.com/watch*"
            ],
            "js": [
                "content.js"
            ],
            "css": [
                "style.css"
            ]
        }
    ],
    "web_accessible_resources": [
        {
            "resources": [
                "fonts/*.woff2",
                "data/yt-ttv.json",
                "data/image_ids.json",
                "data/chat_373395874.json"
            ],
            "matches": [
                "*://www.youtube.com/*"
            ]
        }
    ]
}